<div>
  <div>
    <h1>
      List of all participants
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new participant
    </h2>

    <form action="/insert_participant" method="post">
      <div>
        <label for="event_id_box">
          Event
        </label>

        <input type="text" id="event_id_box" name="query_event_id">
      </div>

      <div>
        <label for="member_id_box">
          Member
        </label>

        <input type="text" id="member_id_box" name="query_member_id">
      </div>

      <div>
        <label for="organizer_id_box">
          Organizer
        </label>

        <input type="text" id="organizer_id_box" name="query_organizer_id">
      </div>

      <button>
        Create participant
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Event
        </th>

        <th>
          Member
        </th>

        <th>
          Organizer
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_participants.each do |a_participant| %>
      <tr>
        <td>
          <%= a_participant.id %>
        </td>

        <td>
          <%= a_participant.event_id %>
        </td>

        <td>
          <%= a_participant.member_id %>
        </td>

        <td>
          <%= a_participant.organizer_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_participant.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_participant.updated_at) %> ago
        </td>

        <td>
          <a href="/participants/<%= a_participant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
