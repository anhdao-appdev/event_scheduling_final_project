<div>
  <div>
    <h1>
      Participant #<%= @the_participant.id %> details
    </h1>

    <div>
      <div>
        <a href="/participants">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_participant/<%= @the_participant.id %>">
          Delete participant
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Event
      </dt>
      <dd>
        <%= @the_participant.event_id %>
      </dd>

      <dt>
        Member
      </dt>
      <dd>
        <%= @the_participant.member_id %>
      </dd>

      <dt>
        Organizer
      </dt>
      <dd>
        <%= @the_participant.organizer_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_participant.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_participant.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit participant
    </h2>

    <form action="/modify_participant/<%= @the_participant.id %>"  method="post" >
      <div>
        <label for="event_id_box">
          Event
        </label>

        <input type="text" id="event_id_box" name="query_event_id" value="<%= @the_participant.event_id %>">
      </div>

      <div>
        <label for="member_id_box">
          Member
        </label>

        <input type="text" id="member_id_box" name="query_member_id" value="<%= @the_participant.member_id %>">
      </div>

      <div>
        <label for="organizer_id_box">
          Organizer
        </label>

        <input type="text" id="organizer_id_box" name="query_organizer_id" value="<%= @the_participant.organizer_id %>">
      </div>

      <button>
        Update participant
      </button>
    </form>
  </div>
</div>

<hr>
