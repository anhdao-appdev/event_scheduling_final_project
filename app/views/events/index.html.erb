<h1><b>Events Calendar</b></h1>

<hr>

<div>
  
  <h2><i>Add a New Event</i></h2>

  <form action="/insert_event" method="post">

    <div class="form-group row">
      <div class="form-group col-md-3">
        <input type="text" class="form-control" id="name" name="query_name" placeholder="Time">
      </div>
      <div class="form-group col-md-3">
        <input type="datetime-local" class="form-control" id="time" name="query_time" placeholder="Time">
      </div>
    </div>

    <div class="form-group row">
      <div class="form-group col-md-3">
        <input type="text" class="form-control" id="location" name="query_location" placeholder="Location">
      </div>
      <div class="form-group col-md-3">
        <input type="text" class="form-control" id="picture" name="query_picture" placeholder="Picture Link">
      </div>
    </div>

    <div class="form-group col-md-6">
      <textarea class="form-control" row=3 id="description" name="query_description" placeholder="Description"></textarea>
    </div>
      
    <br>
    <button type="submit" class="btn btn-primary">Create event</button>
  </form>
</div>

<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Date</th>
      <th scope="col">Hour</th>
      <th scope="col">Event Name</th>
      <th scope="col">Event Location</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @list_of_events.each do |an_event| %>
      <tr class="table-dark">
        <td><%= an_event.id %></td>
        <td><%= an_event.time.strftime("%D") %></td>
        <td><%= an_event.time.strftime("%H:%M") %></td>
        <td><%= an_event.name %></td>
        <td><%= an_event.location %></td>
        <td><a href="/events/<%= an_event.id %>">Event detail</a></td>
      </tr>
    <% end %>
  </tbody>
</table>