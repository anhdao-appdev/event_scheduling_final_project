<h1><b>Add a New Event</b></h1>

<form action="/insert_event" method="post">

<div class="form-group row">
    <div class="form-group col-md-3">
    <input type="text" class="form-control" id="name" name="query_name" placeholder="Name">
    </div>
    <div class="form-group col-md-3">
    <input type="datetime-local" class="form-control" id="time" name="query_time" placeholder="Time">
    </div>
</div>

<div class="form-group row">
    <div class="form-group col-md-3">
    <input type="text" class="form-control" id="location" name="query_location" placeholder="Location">
    </div>
    <div class="form-group col-md-3">
    <input type="text" class="form-control" id="picture" name="query_picture" placeholder="Picture Link">
    </div>
</div>

<div class="form-group col-md-6">
    <textarea class="form-control" row=3 id="description" name="query_description" placeholder="Description"></textarea>
</div>

<div class="form-group">
    <input type="hidden" class="form-control" id="organizer" name="query_organizer" value="<%=@current_user.first_name%> <%=@current_user.last_name%>">
</div>

<div class="form-group">
    <input type="hidden" class="form-control" id="organizer_id" name="query_organizer_id" value="<%=@current_user.id%>">
</div>

<br>
<button type="submit" class="btn btn-primary">Create event</button>
</form>